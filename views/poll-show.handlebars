    <div id="polls">
      {{#if poll.title}}
      <span class="title">{{poll.title}}</span>
      {{else}}
      <form id="title-form">
        <fieldset>
          <div class="input-group">
            <input type="text" name="title" for="title" placeholder="Please Give This Poll a Title" class="form-control" >
            <div class="input-group-btn">
              <button type="submit" class="btn btn-info">Save</button>
            </div>
          </div>
        </fieldset>
